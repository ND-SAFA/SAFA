{
  "steps": [
    {
      "jobs": [
        {
          "object_type": "TRAIN",
          "job_args": {
            "random_seed": 812
          },
          "model_manager": {
            "model_path": "prajjwal1/bert-medium"
          },
          "trainer_args": {
            "num_train_epochs": 50,
            "per_device_train_batch_size": 16,
            "gradient_accumulation_steps": 16,
            "learning_rate": 5e-5,
            "metrics": [
              "map",
              "map_at_k",
              "f",
              "precision"
            ],
            "skip_save": false,
            "load_best_model_at_end": true
          },
          "trainer_dataset_manager": {
            "train_dataset_creator": {
              "object_type": "MULTI",
              "project_readers": [
                {
                  "object_type": "CSV",
                  "project_path": "[DATA_PATH]/git.csv"
                }
              ],
              "filter_unlinked_artifacts": true
            },
            "val_dataset_creator": {
              "object_type": "SPLIT",
              "split_strategy": "SPLIT_BY_LINK",
              "val_percentage": 0.20
            },
            "augmenter": {
              "steps": [
                {
                  "object_type": "RESAMPLE"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
