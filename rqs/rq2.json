{
  "steps": [
    {
      "jobs": [
        {
          "object_type": "TRAIN",
          "job_args": {
            "random_seed": 914
          },
          "model_manager": {
            "model_path": "roberta-base"
          },
          "trainer_args": {
            "output_dir": "[OUTPUT_PATH]/rq1/models",
            "num_train_epochs": 5,
            "per_device_train_batch_size": 4,
            "per_device_eval_batch_size": 4,
            "learning_rate": 1e-05,
            "metrics": [
              "map",
              "f"
            ],
            "skip_save": true
          },
          "trainer_dataset_manager": {
            "train_dataset_creator": {
              "object_type": "TRACE",
              "filter_unlinked_artifacts": true,
              "project_reader": {
                "object_type": "STRUCTURE",
                "project_path": "[DATA_PATH]/software-data/cm1"
              }
            },
            "val_dataset_creator": {
              "object_type": "SPLIT",
              "split_strategy": {
                "*": [
                  "RANDOM",
                  "SOURCE"
                ]
              },
              "val_percentage": 0.25
            },
            "eval_dataset_creator": {
              "object_type": "SPLIT",
              "split_strategy": "RANDOM",
              "val_percentage": 0.25
            },
            "augmenter": {
              "steps": [
                {
                  "object_type": "RESAMPLE"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "output_dir": "[OUTPUT_PATH]/rq1/jobs"
}
