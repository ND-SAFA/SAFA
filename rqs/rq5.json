{
  "steps": [
    {
      "jobs": [
        {
          "object_type": "TRAIN",
          "job_args": {
            "random_seed": {
              "*": [
                197,
                914,
                209,
                330
              ]
            }
          },
          "model_manager": {
            "model_path": "roberta-base"
          },
          "trainer_args": {
            "output_dir": "[OUTPUT_PATH]/rq5/models",
            "train_epochs_range": [
              1,
              21,
              1
            ],
            "per_device_train_batch_size": 2,
            "metrics": [
              "map",
              "map_at_k",
              "f",
              "precision"
            ]
          },
          "trainer_dataset_manager": {
            "train_dataset_creator": {
              "object_type": "SAFA",
              "project_path": "[DATA_PATH]/cchit"
            },
            "val_dataset_creator": {
              "object_type": "SPLIT",
              "val_percentage": {
                "*": [
                  0.2,
                  0.5,
                  0.8
                ]
              },
              "split_strategy": {
                "*": [
                  "random",
                  "source_random"
                ]
              }
            },
            "augmenter": {
              "steps": [
                {
                  "object_type": "RESAMPLE"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "output_dir": "[OUTPUT_PATH]/rq5/jobs"
}
