{
  "steps": [
    {
      "jobs": [
        {
          "object_type": "TRAIN",
          "job_args": {
            "random_seed": 68
          },
          "model_manager": {
            "model_path": "hf-internal-testing/tiny-random-bert"
          },
          "trainer_args": {
            "output_dir": "[OUTPUT_PATH]/test_train/models",
            "num_train_epochs": 10,
            "per_device_train_batch_size": 8,
            "per_device_eval_batch_size": 8,
            "gradient_accumulation_steps": 8,
            "learning_rate": 1e-5,
            "metrics": [
              "map",
              "map_at_k",
              "f",
              "precision"
            ],
            "skip_save": false,
            "load_best_model_at_end": true
          },
          "trainer_dataset_manager": {
            "train_dataset_creator": {
              "object_type": "TRACE",
              "project_reader": {
                "object_type": "CSV",
                "project_path": "[OUTPUT_PATH]/create_dataset/cm1/train.csv"
              }
            },
            "val_dataset_creator": {
              "object_type": "TRACE",
              "project_reader": {
                "object_type": "CSV",
                "project_path": "[OUTPUT_PATH]/create_dataset/cm1/val.csv"
              }
            },
            "augmenter": {
              "steps": [
                {
                  "object_type": "RESAMPLE"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "output_dir": "[OUTPUT_PATH]/test_train/jobs"
}
