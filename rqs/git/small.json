{
  "steps": [
    {
      "jobs": [
        {
          "object_type": "TRAIN",
          "job_args": {
            "random_seed": {
              "*": [
                812,
                924,
                316,
                540,
                457
              ]
            }
          },
          "model_manager": {
            "model_path": "prajjwal1/bert-medium"
          },
          "trainer_args": {
            "num_train_epochs": 1,
            "per_device_train_batch_size": 4,
            "gradient_accumulation_steps": 16,
            "learning_rate": 5e-5,
            "metrics": [
              "map",
              "map_at_k",
              "f",
              "precision"
            ],
            "skip_save": false,
            "load_best_model_at_end": true
          },
          "trainer_dataset_manager": {
            "train_dataset_creator": {
              "object_type": "MULTI",
              "project_readers": [
                {
                  "object_type": "STRUCTURE",
                  "project_path": "[DATA_PATH]/git/data/commit_to_issue/safa"
                },
                {
                  "object_type": "STRUCTURE",
                  "project_path": "[DATA_PATH]/git/data/issue_to_issue_comment/safa"
                },
                {
                  "object_type": "STRUCTURE",
                  "project_path": "[DATA_PATH]/git/data/pr_to_commit/safa"
                },
                {
                  "object_type": "STRUCTURE",
                  "project_path": "[DATA_PATH]/git/data/pr_to_issue/safa"
                },
                {
                  "object_type": "STRUCTURE",
                  "project_path": "[DATA_PATH]/git/data/pr_to_prc/safa"
                },
                {
                  "object_type": "STRUCTURE",
                  "project_path": "[DATA_PATH]/git/data/prc_to_prc/safa"
                }
              ],
              "filter_unlinked_artifacts": true
            },
            "val_dataset_creator": {
              "object_type": "SPLIT",
              "split_strategy": "SPLIT_BY_LINK",
              "val_percentage": 0.15
            },
            "eval_dataset_creator": {
              "object_type": "SPLIT",
              "split_strategy": "SPLIT_BY_LINK",
              "val_percentage": {
                "*": [
                  0.30,
                  0.50,
                  0.70
                ]
              }
            },
            "augmenter": {
              "steps": [
                {
                  "object_type": "RESAMPLE"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
