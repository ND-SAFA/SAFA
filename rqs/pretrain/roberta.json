{
  "steps": [
    {
      "jobs": [
        {
          "object_type": "MLM_PRE_TRAIN",
          "job_args": {
            "random_seed": 42
          },
          "model_manager": {
            "model_path": "roberta-base"
          },
          "trainer_args": {
            "num_train_epochs": 30,
            "per_device_train_batch_size": 4,
            "gradient_accumulation_steps": 16,
            "learning_rate": 1e-6,
            "metrics": [
              "accuracy"
            ],
            "skip_save": false,
            "load_best_model_at_end": true
          },
          "trainer_dataset_manager": {
            "train_dataset_creator": {
              "object_type": "MLM_PRE_TRAIN",
              "orig_data_path": {
                "*": [
                  "[DATA_PATH]/pretrain/automotive",
                  "[DATA_PATH]/pretrain/itrust",
                  "[DATA_PATH]/pretrain/mip"
                ]
              }
            },
            "val_dataset_creator": {
              "object_type": "SPLIT",
              "split_strategy": "PRE_TRAIN",
              "val_percentage": 0.20
            }
          }
        }
      ]
    }
  ]
}
