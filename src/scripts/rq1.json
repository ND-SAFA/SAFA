{
  "steps": [
    {
      "jobs": [
        {
          "object_type": "TRAIN",
          "job_args": {
            "random_seed": {
              "*": [
                36,
                534,
                25,
                242
              ]
            }
          },
          "model_manager": {
            "model_path": {
              "*": [
                "bert-base-uncased",
                "microsoft/codebert-base",
                "thearod5/automotive-base"
              ]
            }
          },
          "trainer_args": {
            "output_dir": "[OUTPUT_PATH]/lhp/rq1",
            "train_epochs_range": [
              10,
              50,
              10
            ],
            "per_device_train_batch_size": 2,
            "metrics": [
              "map"
            ]
          },
          "trainer_dataset_manager": {
            "train_dataset_creator": {
              "object_type": "SAFA",
              "project_path": "[DATA_PATH]/lhp"
            },
            "val_dataset_creator": {
              "object_type": "SPLIT",
              "val_percentage": {
                "*": [
                  0.2,
                  0.5,
                  0.8
                ]
              }
            },
            "augmenter": {
              "*": [
                {
                  "steps": []
                },
                {
                  "steps": [
                    {
                      "object_type": "SOURCE_TARGET_SWAP"
                    }
                  ]
                },
                {
                  "steps": [
                    {
                      "object_type": "SIMPLE_WORD_REPLACEMENT"
                    }
                  ]
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "output_dir": "[OUTPUT_PATH]/lhp/rq1"
}
