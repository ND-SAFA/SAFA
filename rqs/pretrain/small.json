{
  "steps": [
    {
      "jobs": [
        {
          "object_type": "MLM_PRE_TRAIN",
          "job_args": {
            "random_seed": 42
          },
          "model_manager": {
            "model_path": "prajjwal1/bert-medium"
          },
          "trainer_args": {
            "num_train_epochs": 200,
            "per_device_train_batch_size": 32,
