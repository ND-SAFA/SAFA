{
  "steps": [
    {
      "comparison_metric": "map",
      "should_maximize_metric": true,
      "jobs": [
        {
          "object_type": "TRAIN",
          "job_args": {
            "random_seed": 36
          },
          "model_manager": {
            "model_path": "bert-base-uncased"
          },
          "trainer_args": {
            "output_dir": "[OUTPUT_PATH]/lhp/models",
            "train_epochs_range": [
              1,
              4,
              1
            ],
            "per_device_train_batch_size": 2,
            "metrics": [
              "map"
            ]
          },
          "trainer_dataset_manager": {
            "train_dataset_creator": {
              "object_type": "STRUCTURE",
              "project_path": "[DATA_PATH]/structure"
            },
            "val_dataset_creator": {
              "object_type": "SPLIT",
              "val_percentage": 0.5
            }
          }
        }
      ]
    }
  ],
  "output_dir": "[OUTPUT_PATH]/lhp/jobs"
}
