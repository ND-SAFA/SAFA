{
  "steps": [
    {
      "jobs": [
        {
          "object_type": "TRAIN",
          "job_args": {
            "random_seed": 36
          },
          "model_manager": {
            "model_path": "bert-base-uncased"
          },
          "trainer_args": {
            "output_dir": "[OUTPUT_PATH]/lhp/models",
            "train_epochs_range": [
              1,
              3,
              1
            ],
            "per_device_train_batch_size": 2,
            "metrics": [
              "map"
            ]
          },
          "trainer_dataset_manager": {
            "train_dataset_creator": {
              "object_type": "SAFA",
              "project_path": "~/desktop/safa/datasets/lhp/answer"
            },
            "val_dataset_creator": {
              "object_type": "SPLIT",
              "val_percentage": 0.8
            }
          }
        }
      ]
    }
  ],
  "output_dir": "[OUTPUT_PATH]/lhp/jobs"
}
