{
  "steps": [
    {
      "jobs": [
        {
          "object_type": "TRAIN",
          "job_args": {
            "random_seed": {
              "*": [
                812,
                924,
                316,
                540,
                457
              ]
            }
          },
          "model_manager": {
            "model_path": {
              "*": [
                "thearod5/itrust",
                "bert-base-uncased",
                "roberta-base",
                "prajjwal1/bert-tiny",
                "distilbert-base-uncased"
              ]
            }
          },
          "trainer_args": {
            "num_train_epochs": 5,
            "per_device_train_batch_size": 4,
            "gradient_accumulation_steps": 16,
            "learning_rate": 1e-6,
            "metrics": [
              "map",
              "map_at_k",
              "f",
              "precision"
            ],
            "skip_save": false,
            "load_best_model_at_end": true
          },
          "trainer_dataset_manager": {
            "train_dataset_creator": {
              "object_type": "TRACE",
              "project_reader": {
                "object_type": "STRUCTURE",
                "project_path": "[DATA_PATH]/itrust"
              }
            },
            "val_dataset_creator": {
              "object_type": "SPLIT",
              "split_strategy": "SPLIT_BY_LINK",
              "val_percentage": 0.15
            },
            "eval_dataset_creator": {
              "object_type": "SPLIT",
              "split_strategy": "SPLIT_BY_LINK",
              "val_percentage": {
                "*": [
                  0.30,
                  0.50,
                  0.70
                ]
              }
            },
            "augmenter": {
              "steps": [
                {
                  "object_type": "RESAMPLE"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
